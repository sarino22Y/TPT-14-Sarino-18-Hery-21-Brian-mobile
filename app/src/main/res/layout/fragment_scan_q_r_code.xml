<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/ViewScan"
                android:paddingTop="100dp">
    <TextView
            android:text="SCAN QRCODE"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/txtViewScan" android:textSize="24sp"
            android:gravity="center"/>
    <ImageView
            android:src="@drawable/qrcode"
            android:layout_width="279dp"
            android:layout_height="283dp" android:id="@+id/imageViewScan" android:elevation="24dp"
            android:layout_marginTop="100dp" android:layout_alignWithParentIfMissing="true"
            android:layout_marginBottom="80dp" android:layout_centerInParent="true"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewparagraph"
            android:text="@string/qr_paragraph"
            android:textSize="20sp"
            android:layout_below="@+id/imageViewScan" android:gravity="center"/>
</RelativeLayout>