<?xml version="1.0" encoding="utf-8"?>
<!-- Layout XML pour le fragment de déclaration d'événement -->
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"
        android:padding="32dp">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:text="Enregistrer un événement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView"
                    android:textSize="24sp"
                    android:textAlignment="center"
            />

            <EditText
                    android:id="@+id/title_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Titre de l'événement"
                    android:background="@drawable/edit_text_rounded_background"
                    android:textColorHint="#888888"
                    android:textColor="@color/fui_transparent"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_marginTop="50dp"/>

            <EditText
                    android:id="@+id/description_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Description de l'événement"
                    android:background="@drawable/edit_text_rounded_background"
                    android:textColorHint="#888888"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

            <EditText
                    android:id="@+id/department_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Département destiné"
                    android:background="@drawable/edit_text_rounded_background"
                    android:textColorHint="#888888"
                    android:padding="16dp"
                    android:layout_marginBottom="16dp"/>

            <EditText
                    android:id="@+id/citizen_id_field"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Identifiant unique du citoyen"
                    android:background="@drawable/edit_text_rounded_background"
                    android:textColorHint="#888888"
                    android:padding="16dp"/>

            <Button
                    android:id="@+id/submit_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Soumettre"
                    android:background="@drawable/button_rounded_background"
                    android:textColor="#FFFFFF"
                    android:paddingStart="24dp"
                    android:paddingEnd="24dp"
                    android:layout_marginTop="50dp"/>
            <Button
                    android:id="@+id/myliste_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Evènements déclarés"
                    android:layout_marginTop="64dp"
                    style="@style/Widget.MaterialComponents.Button.TextButton.Dialog"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
